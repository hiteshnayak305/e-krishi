<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
            {{ successMsg }}
        </div>
    </div>
</div>



<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 text-center center">
        <form action="/" method="GET" class="form-inline">
            <div class="form-group">
                <input class="form-control form-control-lg" type="text" name="search" placeholder="Search products">
                <input class="btn btn-md" type="submit" value="Search" class="btn btn-default">
            </div>
        </form>
    </div>
</div>

<!-- frontend start from here -->
<div class="row"></div>
{{# each products}}
    {{# each this}}
    <div class="card col-sm-4 col-md-3">
        <img class="card-img-top" src="{{ this.imageURL }}" alt="Card image cap">
        <div class="card-body">
            <h1 class="card-title text-center">{{ this.title }}</h1>
            <p class="card-text">{{ this.description }}</p>
            <h3 class="card-text text-center">रु{{ this.price }}</h3>
            <a href="/add-to-cart/{{this._id}}" class="btn btn-primary btn-block">कार्ट में डालें</a>
        </div>
    </div>
    {{/each}}

{{/each}}
</div>
